/* 全屏下左右切换动画 */

@keyframes swithLeftAnimation {
  0% {
    left: -100%;
  }
  100% {
    left: -100%;
    opacity: 0;
  }
}

@keyframes switchRightAnimation {
  0% {
    left: 100%;
  }
  100% {
    left: 100%;
    opacity: 0;
  }
}

@keyframes leftAnimation {
  0% {
    left: 0;
    opacity: 1;
  }
  99% {
    left: -5%;
    opacity: 0;
  }
  100% {
    left: -100%;
    opacity: 0;
  }
}

@keyframes centerLeft {
  from {
    transform: translateX(5%);
    opacity: 0;
    z-index: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
    z-index: 100;
  }
}

@-webkit-keyframes centerLeft {
  from {
    transform: translateX(5%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

@keyframes centerRight {
  from {
    transform: translateX(-5%);
    opacity: 0;
    z-index: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
    z-index: 100;
  }
}

@-webkit-keyframes centerRight {
  from {
    transform: translateX(-5%);
    opacity: 0;
    z-index: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
    z-index: 100;
  }
}

@keyframes rightAnimation {
  0% {
    left: 0;
    opacity: 1;
  }
  99% {
    opacity: 0;
    left: 5%;
  }
  100% {
    left: 100%;
    opacity: 0;
  }
}

@keyframes clearRightAnimation {
  from {
    transform: translateX(0);
    opacity: 0;
  }
  to {
    transform: translateX(5%);
    opacity: 0;
  }
}

@-webkit-keyframes clearRightAnimation {
  from {
    transform: translateX(0);
    opacity: 0;
  }
  to {
    transform: translateX(5%);
    opacity: 0;
  }
}

/* 切换是否全屏动画 */

@keyframes move-screen {
  from {
    width: 80%;
    height: 80%;
    border-top-left-radius: 32rpx;
    border-top-right-radius: 32rpx;
    left: 10%;
    z-index: 0;
    padding-top: 240rpx;
  }
  to {
    width: 100%;
    height: 100%;
    border-radius: 0;
    left: 0;
    z-index: 10;
    padding-top: 0;
  }
}

@-webkit-keyframes move-screen {
  from {
    width: 80%;
    height: 80%;
    border-top-left-radius: 32rpx;
    border-top-right-radius: 32rpx;
    left: 10%;
    z-index: 0;
    padding-top: 240rpx;
  }
  to {
    width: 100%;
    height: 100%;
    border-radius: 0;
    left: 0;
    z-index: 10;
    padding-top: 0;
  }
}

@keyframes defaultScreen {
  from {
    width: 100%;
    height: 100%;
    border-radius: 0;
    left: 0;
    z-index: 10;
    padding-top: 0;
  }
  to {
    width: 80%;
    height: 80%;
    border-top-left-radius: 32rpx;
    border-top-right-radius: 32rpx;
    left: 10%;
    z-index: 0;
    padding-top: 240rpx;
  }
}

@-webkit-keyframes defaultScreen {
  from {
    width: 100%;
    height: 100%;
    border-radius: 0;
    left: 0;
    z-index: 10;
    padding-top: 0;
  }
  to {
    width: 80%;
    height: 80%;
    border-top-left-radius: 32rpx;
    border-top-right-radius: 32rpx;
    left: 10%;
    z-index: 0;
    padding-top: 240rpx;
  }
}

/* 全屏后旋转是否显示动画 */

@keyframes hidden-extend-head {
  from {
    transform: scale(1) rotate(-32deg) translateX(-5px);
  }
  to {
    transform: scale(.3) rotate(-32deg) translateX(-5px);
    opacity: 0;
  }
}

@keyframes hidden-component-head {
  from {
    transform: scale(1) rotate(-12deg) translateX(-10px);
  }
  to {
    transform: scale(.3) rotate(-12deg) translateX(-10px);
    opacity: 0;
  }
}

@keyframes hidden-api-head {
  from {
    transform: scale(1) rotate(-32deg) translateX(-5px);
  }
  to {
    transform: scale(.3) rotate(-32deg) translateX(-5px);
    opacity: 0;
  }
}

@keyframes show-head {
  from {
    transform: scale(.3);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

@-webkit-keyframes show-head {
  from {
    transform: scale(.3);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

/* 二级菜单动画 */

@keyframes listShow {
  from {
    transform: translateY(-5px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@-webkit-keyframes listShow {
  from {
    transform: translateY(-5px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 二级菜单三角形旋转动画 */

@keyframes trangle-default {
  from {
    transform: rotate(360deg)
  }
  to {
    transform: rotate(180deg)
  }
}

@-webkit-keyframes trangle-default {
  from {
    transform: rotate(360deg)
  }
  to {
    transform: rotate(180deg)
  }
}

@keyframes trangle-rotate {
  from {
    transform: rotate(180dev)
  }
  to {
    transform: rotate(360deg)
  }
}

@-webkit-keyframes trangle-rotate {
  from {
    transform: rotate(180dev)
  }
  to {
    transform: rotate(360deg)
  }
}