<view class="container">
    <view class="body">
        <form catchsubmit="formSubmit" catchreset="formReset">
            <view class="page-section page-section-space">
              <view class="page-section-title">开关选择器 switch</view>
              <switch name="switch" class="checkbox-space" />
              <switch name="switch" checked="checked" />
            </view>
            <view class="page-section page-section-space">
              <view class="page-section-title">单项选择器 radio</view>
              <radio-group name="radio">
                <label><radio value="radio1" />选项一</label>
                <label><radio value="radio2" />选项二</label>
              </radio-group>
            </view>
            <view class="page-section page-section-space">
              <view class="page-section-title">多项选择器 checkbox</view>
              <checkbox-group name="checkbox">
                <label><checkbox value="checkbox1" />选项一</label>
                <label><checkbox value="checkbox2" />选项二</label>
              </checkbox-group>
            </view>
            <view class="page-section page-section-space">
              <view class="page-section-title">滑动选择器 slider</view>
              <slider value="50" name="slider" show-value></slider>
            </view>     
            <view class="page-section">
              <view class="page-section-title page-section-title-space">输入框 input</view>
              <view class="ttui-cells input-block">
                <view class="ttui-cell">
                  <view class="ttui-cell__bd">
                    <input class="ttui-input" name="input" placeholder="这是一个输入框" />
                  </view>
                </view>
              </view>
            </view>      
            <view class="page-section page-section-space button-block">
              <button type="primary" formType="submit">提交</button>
              <button formType="reset">重设</button>
            </view>
          </form>
    </view>
  </view>

